<assembly xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.0.0.xsd">
	<id>package</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>target/build/scripts</directory>
			<includes>
				<include>install.bat</include>
				<include>uninstall.bat</include>
			</includes>
			<outputDirectory></outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/build/scripts</directory>
			<includes>
				<include>*.bat</include>
			</includes>
			<excludes>
				<exclude>install.bat</exclude>
			</excludes>
			<outputDirectory>data/bin</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/build/bin</directory>
			<outputDirectory>data/bin</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/conf</directory>
			<outputDirectory>data/conf</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/build/logs</directory>
			<outputDirectory>data/logs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/build/jre${jre.version}</directory>
			<outputDirectory>data/jre${jre.version}</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/build/db</directory>
			<outputDirectory>data/db</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>.</directory>
			<includes>
				<include>README.md</include>
			</includes>
			<outputDirectory></outputDirectory>
		</fileSet>
		<fileSet>
            <directory>target/build</directory>
            <includes>
                <include>README.md</include>
            </includes>
            <outputDirectory>data</outputDirectory>
        </fileSet>
		<fileSet>
			<directory>target</directory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>${project.artifactId}-${project.version}.jar</exclude>
			</excludes>
			<outputDirectory>data/lib</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>data/lib</outputDirectory>
			<scope>runtime</scope>
			<excludes>
				<exclude>${project.groupId}:${project.artifactId}</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>